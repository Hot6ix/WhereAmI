<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_01_title" >

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_tracking_id"
            android:summary="@string/pref_description_enable_notification"
            android:title="@string/pref_title_enable_notification" />

        <ListPreference
            android:key="@string/pref_tracking_action_id"
            android:defaultValue="0"
            android:dialogTitle="@string/pref_notification_action_list_title"
            android:entries="@array/pref_tracking_action_entries"
            android:entryValues="@array/pref_tracking_action_values"
            android:title="@string/pref_notification_action_title"
            android:dependency="@string/pref_tracking_id" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_02_title" >

        <Preference
            android:key="@string/pref_about_id"
            android:title="@string/pref_about_title" />

    </PreferenceCategory>

</PreferenceScreen>
