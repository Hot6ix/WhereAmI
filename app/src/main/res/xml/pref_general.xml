<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_tracking_id"
        android:summary="@string/pref_description_enable_tracking"
        android:title="@string/pref_title_enable_tracking" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@integer/pref_default_intervals"
        android:inputType="numberSigned"
        android:key="@string/pref_interval_id"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_intervals"
        android:dependency="@string/pref_tracking_id"/>

</PreferenceScreen>
